<%- include('partials/header') %>

<div class="error-page">
    <div class="container">
        <div class="error-content">
            <div class="error-icon">
                <% if (typeof errorTitle !== 'undefined' && errorTitle.includes('404')) { %>
                    üîç
                <% } else if (typeof errorTitle !== 'undefined' && errorTitle.includes('403')) { %>
                    üõ°Ô∏è
                <% } else if (typeof errorTitle !== 'undefined' && errorTitle.includes('429')) { %>
                    ‚è±Ô∏è
                <% } else { %>
                    ‚ö†Ô∏è
                <% } %>
            </div>

            <div class="error-header">
                <span class="error-badge">ERROR</span>
            </div>

            <h1 class="error-title"><%= typeof errorTitle !== 'undefined' ? errorTitle : 'An Error Occurred' %></h1>
            <p class="error-message"><%= typeof errorMessage !== 'undefined' ? errorMessage : 'Something went wrong.' %></p>

            <% if (typeof details !== 'undefined' && details) { %>
            <div class="error-section what-happened">
                <h2>What Happened?</h2>
                <p><%= details %></p>
            </div>
            <% } %>

            <div class="error-actions">
                <a href="/" class="btn btn-primary">üè† Go Home</a>
                <% if (typeof session !== 'undefined' && session && session.userId) { %>
                    <a href="/dashboard" class="btn btn-secondary">üìä Dashboard</a>
                <% } else { %>
                    <a href="/login" class="btn btn-secondary">üîê Login</a>
                <% } %>
            </div>

            <% if (typeof statusCode !== 'undefined') { %>
            <div class="error-footer">
                <small>Error Code: <%= statusCode %></small>
            </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.error-content {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 3rem;
    max-width: 600px;
    width: 100%;
    text-align: center;
}

.error-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.error-header {
    margin-bottom: 2rem;
}

.error-badge {
    display: inline-block;
    background: #dc3545;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: bold;
    font-size: 0.9rem;
    margin-bottom: 1rem;
}

.error-title {
    color: #2c3e50;
    font-size: 2rem;
    margin: 0.5rem 0;
}

.error-message {
    color: #555;
    font-size: 1.1rem;
    margin: 1rem 0;
}

.error-section {
    margin: 2rem 0;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: left;
    background: #fff3cd;
    border-left: 4px solid #ffc107;
}

.error-section h2 {
    color: #2c3e50;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
}

.error-section p {
    color: #555;
    line-height: 1.6;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
}

.error-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
    color: #888;
}
</style>

<%- include('partials/footer') %>
